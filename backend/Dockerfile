# ============================================================
# üöÄ Dockerfile PHP 8.3 pour Render (avec PostgreSQL)
# ============================================================

FROM php:8.3-cli

# 1Ô∏è‚É£ Installer les extensions n√©cessaires
RUN apt-get update && apt-get install -y \
    libpq-dev \
    unzip \
    git \
    && docker-php-ext-configure pdo_pgsql --with-pdo-pgsql \
    && docker-php-ext-install pdo pdo_pgsql \
    && rm -rf /var/lib/apt/lists/*

# 2Ô∏è‚É£ Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# 3Ô∏è‚É£ Copier le backend dans le conteneur
WORKDIR /app/backend
COPY . /app/backend

# 4Ô∏è‚É£ Installer les d√©pendances PHP (en ignorant ext-mongodb)
RUN composer install --no-interaction --no-progress --ignore-platform-req=ext-mongodb

# 5Ô∏è‚É£ Exposer le port utilis√© par Render
EXPOSE 10000

# 6Ô∏è‚É£ D√©marrer le serveur PHP interne avec le router
CMD ["php", "-S", "0.0.0.0:10000", "router.php"]
